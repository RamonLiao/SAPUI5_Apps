<mvc:View
    controllerName="ui5.dashboardapp.controller.Dashboard"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    height="100%"
>
    <Page showHeader="false">
        <content>
            <Panel>
                <ObjectHeader
                    icon="{images>/avatarImg}"
                    iconDensityAware="false"
                    iconAlt="Joe Blogs"
                    iconActive="true"
                    imageShape="Circle"
                    responsive="true"
                    title="Joe Blogs"
                    intro="France"
                    backgroundDesign="Transparent"
                />

                <Text
                    text="Avatar of a product with border"
                    class="sapUiSmallMarginTop"
                />

                <FlexBox alignItems="Start">
                    <ObjectHeader
                        icon="{images>/avatarImg}"
                        iconDensityAware="false"
                        iconAlt="Joe Blogs"
                        iconActive="true"
                        imageShape="Circle"
                        responsive="true"
                        title="Joe Blogs"
                        intro="France"
                        backgroundDesign="Transparent"
                    >
                        <!-- <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData> -->
                    </ObjectHeader>
                    <Text
                        text="Avatar of a product with border"
                        class="sapUiSmallMarginTop"
                    >
                        <!-- <layoutData>
                            <FlexItemData growFactor="3" />
                        </layoutData> -->
                    </Text>
                </FlexBox>
            </Panel>

            <IconTabBar
                id="idIconTabBar"
                headerBackgroundDesign="Transparent"
                class="sapUiSmallMarginBottom sapUiResponsiveContentPadding"
            >
                <items>
                    <IconTabFilter
                        key="home"
                        text="Home"
                    >
                        <mvc:XMLView
                            viewName="ui5.dashboardapp.view.DashboardTabHome"
                        />
                    </IconTabFilter>
                    <IconTabFilter
                        key="assemblyOptions"
                        text="Assembly Options"
                    >
                        <List
                            headerText="A List"
                            showSeparators="Inner"
                        />
                    </IconTabFilter>
                    <IconTabFilter
                        key="contact"
                        text="Contact Information"
                    >
                        <!-- <FeedInput /> -->
                    </IconTabFilter>
                </items>
            </IconTabBar>

            <!-- <mvc:XMLView viewName="ui5.dashboardapp.view.InvoiceList" /> -->
        </content>
    </Page>
</mvc:View>
